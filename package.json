{
  "name": "logistica-fretes-backend",
  "version": "1.0.0",
  "engines": {
    "node": ">=20 <23",
    "npm": ">=9"
  },
  "description": "Backend para Sistema de Gestão de Logística e Fretes Inteligentes",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "postinstall": "npm run build",
    "start": "dist/server.js",
    "dev:js": "npm run build && node dist/server.js",
    "lint": "eslint \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "logistics",
    "fretes",
    "nodejs",
    "typescript",
    "express"
  ],
  "author": "Matheus",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "mysql2": "^3.6.0",
    "typescript": "^5.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.33",
